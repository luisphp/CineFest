<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hurtado.luis.ejemplo.cinefest.Checkout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Nombre_de_pelicula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/Indigo"
                    android:gravity="center"
                    android:text="Nombre de Pelicula"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />


                <ImageView
                    android:id="@+id/BannerPelicula"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Nombre_de_cine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/Gris_Oscuro"
                    android:gravity="center"
                    android:text="Cine"
                    android:textColor="@color/Ambar"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Fecha_funcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fecha"
                        android:textColor="@color/Indigo"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/Hora_funcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Hora"
                        android:textColor="@color/Indigo"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Sala_funcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/Gris_Oscuro"
                    android:gravity="center"
                    android:text="Sala"
                    android:textColor="@color/Ambar"
                    android:textSize="14dp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Gris_Oscuro"
                        android:gravity="center"
                        android:text="Sillas Seleccionadas: "
                        android:textColor="@color/Ambar"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/SillasSeleccionadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Gris_Oscuro"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="@color/Ambar"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/gris_claro"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Monto a pagar: "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/MontoTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="--"
                        android:textSize="18dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/TarjetaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre "
                    android:gravity="center"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/NumeroDeTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero de tarjeta"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="16"
                    android:textSize="15dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/SpinnerNacionalidad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:gravity="center" />

                    <EditText
                        android:gravity="center"
                        android:id="@+id/Cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:hint="Cedula"
                        android:inputType="number"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/CVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:hint="CVV"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/gris_claro"
                        android:gravity="center"
                        android:text="Vence el: "
                        android:textSize="17dp" />

                    <Spinner
                        android:id="@+id/MesExp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center" />

                    <Spinner
                        android:id="@+id/AÃ±oExp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/Preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Preview" />

            <Button
                android:id="@+id/Proceder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:enabled="true"
                android:text="Pagar" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
